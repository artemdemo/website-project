{
  "name": "website-project",
  "version": "0.0.0",
  "description": "Website Project",
  "scripts": {
    "build:all": "turbo run build --filter='!website-content'",
    "build:watch": "turbo watch build --filter='!website-content'",
    "types:all": "turbo run types",
    "test": "turbo run test",
    "preview": "yarn workspace preview start",
    "lint": "yarn lint:prettier; yarn lint:versions",
    "lint:prettier": "prettier --write .",
    "lint:versions": "syncpack list-mismatches"
  },
  "author": "Artem Demo",
  "private": true,
  "workspaces": {
    "packages": [
      "content",
      "packages/*"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "prettier": "^3.0.0",
    "syncpack": "^13.0.0",
    "turbo": "^2.0.0"
  },
  "packageManager": "yarn@4.6.0"
}
